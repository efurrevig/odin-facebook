<div class="container">
    <% @friends.each do |friend| %>
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-6">
                <div class="card shadow p-3 rounded">

                    <div class="d-flex justify-content-between p-2">
                        <div class="d-flex flex-row align-items-center"> 
                            <%= content_tag(:img, nil, 
                                                src: image_path("profile-pic.jpg"), 
                                                style: "height:2em;width:2em",
                                                class: "rounded-circle me-2") %>
                            <%= friend.friend.name %>
                        </div>

                        <div class="d-flex flex-row mt-1" data-controller="friends">
                            <%= button_to "Unfriend", user_friend_path(current_user.id, friend), 
                                            method: :delete, remote: true, class: "btn btn-danger", data: { action: "click->friends#removeFriend", requests_target: "friend", disable_with: true } %>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    <% end %>
</div>